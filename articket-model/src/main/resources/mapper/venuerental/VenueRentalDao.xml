<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.maddog.articket.venuerental.dao.VenueRentalDao">

<!-- resultMap-->
    <resultMap id="resultMapForSelect" type="com.maddog.articket.venuerental.entity.VenueRental">
        <id column="venue_rental_id" property="venueRentalId" />
        <result column="venue_id" property="venueId" />
        <result column="partner_id" property="partnerId" />
        <result column="activity_name" property="activityName" />
        <result column="proposal" property="proposal" />
        <result column="venue_rental_status" property="venueRentalStatus" />
        <result column="venue_rental_start_Date" property="venueRentalStartDate" />
        <result column="venue_rental_end_date" property="venueRentalEndDate" />
        <result column="venue_rental_create_time" property="venueRentalCreateTime" />
        <result column="venue_rental_code" property="venueRentalCode" />
    </resultMap>
<!-- resultMap-->

<!-- method-->
    <!-- 新增場地申請資料 -->
    <insert id="insert"
            parameterType="com.maddog.articket.venuerental.entity.VenueRental">
        INSERT INTO venue_rental
        (
            venue_id,
            partner_id,
            activity_name,
            proposal,
            venue_rental_status,
            venue_rental_start_date,
            venue_rental_end_date,
            venue_rental_code
        )
        VALUES
        (
            #{venueId},
            #{partnerId},
            #{activityName},
            #{proposal},
            #{venueRentalStatus},
            #{venueRentalStartDate},
            #{venueRentalEndDate},
            #{venueRentalCode}
        )
    </insert>

    <!-- 更新場地申請資料 -->
    <update id="update"
            parameterType="com.maddog.articket.venuerental.entity.VenueRental">
        UPDATE
            venue_rental
        SET
            venue_id = #{venueId},
            partner_id = #{partnerId},
            activity_name = #{activityName},
            proposal = #{proposal},
            venue_rental_status = #{venueRentalStatus},
            venue_rental_start_date = #{venueRentalStartDate},
            venue_rental_end_date = #{venueRentalEndDate},
            venue_rental_code = #{venueRentalCode}
        WHERE
            venue_rental_id = #{venueRentalId}
    </update>

    <!-- 依 ID 查詢場地申請資料 -->
    <select id="findById"
            parameterType="java.lang.Integer"
            resultMap="resultMapForSelect">
        SELECT
            *
        FROM
            venue_rental
        WHERE
            venue_rental_id = #{venue_rental_id)
    </select>

    <!-- 查詢所有場地申請資料清單 -->
    <select id="findAll"
            resultMap="resultMapForSelect">
        SELECT
            *
        FROM
            venue_rental
        ORDER BY
            venue_rental_id
    </select>

    <!-- 依廠商 ID 查詢場地申請資料清單 -->
    <select id="findByPartnerId"
            resultMap="resultMapForSelect">
        SELECT
            *
        FROM
            venue_rental
        WHERE
            partner_id = #{partnerId}
    </select>

    <!-- 依廠商 ID 查詢未新增活動清單 -->
    <select id="findUnNewByPartnerId"
            resultMap="resultMapForSelect">
        SELECT
            *
        FROM
            venue_rental
        WHERE
            venue_rental_status = 1
            AND
            partner_id = #{partnerId}
    </select>
<!-- method-->

</mapper>