    <!-- 依場館 ID 與座位代號查詢座位 ID -->
    <select id="findSeatIdByVenueIdAndSeatName"
            parameterType="java.lang.Integer"
            resultType="java.lang.Integer">
        SELECT
            seatId
        FROM
            seat
        WHERE
            venueId = #{venueId)
            AND
            seatName = #{seatName}
    </select>
